@inject JournalApp.Services.ThemeService Theme

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <span class="navbar-brand">Journal</span>
    </div>
</div>

<div class="nav-scrollable">
    <nav class="flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                Journal Editor
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard">
                Dashboard
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="search">
                Search
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="my-journals">
                My Journals
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="calendar">
                Calendar
            </NavLink>
        </div>

        <!-- THEME TOGGLE -->
        <div class="nav-item px-3" style="margin-top:20px">
            <button class="btn btn-secondary w-100" @onclick="ToggleTheme">
                @(Theme.CurrentTheme == "light" ? "Dark Mode" : "Light Mode")
            </button>
        </div>

    </nav>
</div>

@code {
    private async Task ToggleTheme()
    {
        await Theme.ToggleAsync();
        StateHasChanged();
    }
}
